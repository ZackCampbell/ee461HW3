<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>BlogServlet</servlet-name>
        <servlet-class>blog.BlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogServlet</servlet-name>
        <url-pattern>/ofyblog</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyUserServlet</servlet-name>
        <servlet-class>blog.MyUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyUserServlet</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CronInit</servlet-name>
        <servlet-class>blog.CronInit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CronInit</servlet-name>
        <url-pattern>/croninit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CronRemove</servlet-name>
        <servlet-class>blog.CronRemove</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CronRemove</servlet-name>
        <url-pattern>/cronremove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CronServlet</servlet-name>
        <servlet-class>blog.CronServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CronServlet</servlet-name>
        <url-pattern>/crondaily</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>